{
    "name": "inspector-apm/inspector-php",
    "description": "Inspector monitoring for PHP applications.",
    "keywords": ["monitoring", "php", "inspector", "observability", "telemetry"],
    "license": "MIT",
    "authors": [
        {
            "name": "Valerio Barbera",
            "email": "valerio@inspector.dev"
        }
    ],
    "require": {
        "php": "^8.1"
    },
    "autoload": {
        "psr-4": {
            "Inspector\\": "src/"
        }
    },
    "config": {
        "sort-packages": true,
        "preferred-install": "dist",
        "platform": {
            "php": "8.1"
        }
    },
    "minimum-stability": "stable",
    "require-dev": {
        "ext-curl": "*",
        "friendsofphp/php-cs-fixer": "^3.75",
        "neuron-core/neuron-ai": "^2.8",
        "phpstan/phpstan": "^2.1",
        "phpunit/phpunit": "^9.0",
        "rector/rector": "^2.2",
        "tomasvotruba/type-coverage": "^2.0"
    },
    "autoload-dev": {
        "psr-4": {
            "Inspector\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "analyse": [
            "vendor/bin/phpstan analyse -v --ansi --memory-limit=2G"
        ],
        "test": [
            "vendor/bin/phpunit --colors=always"
        ],
        "refactor": [
            "vendor/bin/rector",
            "php-cs-fixer fix --allow-risky=yes"
        ],
        "format": [
            "php-cs-fixer fix --allow-risky=yes"
        ],
        "style": [
            "php-cs-fixer fix --allow-risky=yes",
            "vendor/bin/rector"
        ]
    },
    "extra": {
        "branch-alias": {
            "dev-develop": "3.16.x-dev",
            "dev-master": "3.16.x-dev"
        }
    }
}
